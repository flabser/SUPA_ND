<?xml version="1.0" encoding="utf-8"?>
<rule type="form" id="first-aider" mode="on">
    <description>first-aider</description>
    <xsltfile>forms/c2/first-aider.xsl</xsltfile>
    <doctype>main</doctype>

    <events>
        <queryopen source="file">form.c2.first_aider.QueryOpen</queryopen>
        <querysave source="file">form.c2.first_aider.QuerySave</querysave>
    </events>

    <caption name="name" source="KEYWORD">name</caption>
    <caption name="address" source="KEYWORD">address</caption>
    <caption name="phone" source="KEYWORD">phone</caption>
    <caption name="details" source="KEYWORD">details</caption>
</rule>
